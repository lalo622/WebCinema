@model WebCinema.Models.User

@{
    ViewBag.Title = "Chỉnh sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    .main-content {
        padding: 15px;
        background-color: #f8f9fa;
    }

    .form-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        padding: 20px;
        max-width: 900px;
        margin-right: auto;
        margin-left: 0;
    }

    .page-title {
        color: #333;
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 5px;
            font-size: 14px;
            display: block;
        }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 14px;
        height: 38px;
        width: 100%;
    }

    .btn-action {
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        margin-right: 10px;
    }

    .btn-save {
        background-color: #28a745;
        color: white;
        border: none;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .required-field::after {
        content: " *";
        color: #dc3545;
    }

    .form-actions {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid #eee;
        text-align: left;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-container {
            padding: 15px;
        }
    }
</style>

<div class="main-content">
    <div class="form-container">
        <h2 class="page-title">Chỉnh sửa tài khoản</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.UserID)

            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, new { @class = "required-field" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "required-field" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Role, new { @class = "required-field" })
                    @Html.DropDownListFor(model => model.Role,
                        new SelectList(new[]
                        {
                            new { Value = WebCinema.Helper.UserRoles.Customer, Text = "Khách hàng" },
                            new { Value = WebCinema.Helper.UserRoles.Staff, Text = "Nhân viên" },
                            new { Value = WebCinema.Helper.UserRoles.CinemaManager, Text = "Quản lý rạp" },
                            new { Value = WebCinema.Helper.UserRoles.SuperAdmin, Text = "Quản trị viên cấp cao" }
                        }, "Value", "Text", Model.Role),
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsConfirmed)
                    <div class="checkbox" style="margin-top: 8px;">
                        @Html.EditorFor(model => model.IsConfirmed)
                        @Html.ValidationMessageFor(model => model.IsConfirmed, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-action btn-save">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
                <a href="@Url.Action("Index")" class="btn btn-action btn-cancel">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}