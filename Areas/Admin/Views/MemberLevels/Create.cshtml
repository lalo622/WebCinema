@model WebCinema.Models.MemberLevel

@{
    ViewBag.Title = "Thêm cấp độ thành viên mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Thêm cấp độ thành viên mới</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên cấp độ" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.RequiredSpending, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.RequiredSpending, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mức chi tiêu yêu cầu" } })
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.RequiredSpending, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.TicketPointPercent, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.TicketPointPercent, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập % tích điểm vé" } })
                            <span class="input-group-text">%</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.TicketPointPercent, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.ComboPointPercent, htmlAttributes: new { @class = "form-label fw-bold" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.ComboPointPercent, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập % tích điểm combo" } })
                            <span class="input-group-text">%</span>
                        </div>
                        @Html.ValidationMessageFor(model => model.ComboPointPercent, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .card-header {
            padding: 1rem 1.5rem;
        }

        .form-label {
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            background-color: #f8f9fa;
        }
    </style>
}